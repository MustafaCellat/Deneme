<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/deniz">

    <Button
        android:id="@+id/button_musteri"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginBottom="280dp"
        android:backgroundTint="@color/white"
        android:text="Müşteri Ol"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/button3"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="290dp"
        android:backgroundTint="#C30606"
        android:drawableTint="#000000"
        android:text="Giriş Yap"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/button_musteri"
        app:layout_constraintEnd_toEndOf="@+id/button_musteri"
        app:layout_constraintStart_toStartOf="@+id/button_musteri"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="388dp"
        android:layout_height="44dp"
        android:background="@drawable/denizbank"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042" />
</androidx.constraintlayout.widget.ConstraintLayout>