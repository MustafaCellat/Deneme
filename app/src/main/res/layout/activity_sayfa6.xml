<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sayfa6"
    android:background="@color/deniz">

    <View
        android:id="@+id/view6"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/se7en"
        app:layout_constraintEnd_toEndOf="@+id/text_canli"
        app:layout_constraintStart_toStartOf="@+id/text_canli"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="@dimen/_153sdp"
        android:layout_height="@dimen/_153sdp"
        android:layout_marginTop="80dp"
        android:background="@drawable/cagri_merkezi"
        app:layout_constraintBottom_toTopOf="@+id/text_canli"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/text_canli"
        app:layout_constraintTop_toBottomOf="@+id/view6" />

    <TextView
        android:id="@+id/text_canli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:gravity="center"
        android:text="Canlı görüşmeye aktarılıyorsunuz lütfen bekleyiniz..."
        android:textColor="@color/white"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_forward"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#C30606"
        android:text="Şimdi Görüşmeye Bağlanın"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/text_canli"
        app:layout_constraintStart_toStartOf="@+id/text_canli"
        app:layout_constraintTop_toBottomOf="@+id/text_canli" />
</androidx.constraintlayout.widget.ConstraintLayout>




